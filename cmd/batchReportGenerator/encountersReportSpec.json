        "Patient ID": {
            "type": "value",
            "desciption": "Unique patient identifier",
            "source": "PatientID"
        },
        "Encounter time": {
            "type": "value",
            "desciption": "Time of encounter",
            "source": "Data",
            "ehrPath": "/context/end_time"
        },
        "Author": {
            "type": "mutlipleValues",
            "desciption": "User that created the encounter file",
            "source": "Data",
            "format": "%s (%s)",
            "properties": [
                {
                    "type": "value",
                    "ehrPath": "/composer|identifier"
                },
                {
                    "type": "value",
                    "ehrPath": "/composer|name"
                }
            ]
        },
        "Main diagnosis": {
            "type": "array",
            "description":
                "Main diagnosis (first diagnosis in the array of diagnoses)",
            "source": "Data",
            "ehrPath":
                "/content[openEHR-EHR-COMPOSITION.encounter.v1]/context/other_context/items[openEHR-EHR-EVALUATION.problem_diagnosis.v1]",
